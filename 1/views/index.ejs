<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>index</title>

    <link rel="stylesheet" href="/file/style.css">
</head>
<body>
    <%- include ('./header') %> 

    <section id="productList">
        <% for (let product of products) { %>
            <section class="productListInfo">
                <img src="/file/<%= product.image %>">
                <section class="productListInfoTxt">
                    <h2 class="productListName"><%= product.name %></h2>
                    <section>color: <%= product.color %></section>
                    <section>size: <%= product.size %></section>
                    <a href="product/<%= product.id %>">view product</a>
                </section>
            </section>
        <% } %>
    </section>

    <%- include ("./footer") %>
</body>
</html>